# Eyewear Catalog Application Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=development # development, production, test
LOG_LEVEL=info # debug, info, warn, error

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/eyewear-catalog

# Session and Security
COOKIE_SECRET=your-cookie-secret-here
SESSION_SECRET=your-session-secret-here

# Shopify Configuration
SHOPIFY_API_KEY=your-shopify-api-key
SHOPIFY_API_SECRET=your-shopify-api-secret
SHOPIFY_API_SCOPES=read_products,write_products,read_orders,write_orders,read_customers
SHOPIFY_APP_HOST=https://your-app-hostname.com
SHOPIFY_API_VERSION=2023-07
SHOPIFY_APP_EMBEDDED=true

# Eyewear Database API Configuration
EYEWEAR_DB_API_URL=https://api.eyewear-database.com
EYEWEAR_DB_API_KEY=your-eyewear-db-api-key
EYEWEAR_DB_TIMEOUT=30000
EYEWEAR_DB_API_VERSION=v1

# CORS Configuration
ALLOWED_ORIGINS=https://your-frontend-domain.com,https://admin.shopify.com
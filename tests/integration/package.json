{
  "name": "varai-integration-tests",
  "version": "1.0.0",
  "description": "Integration tests for the VARAi platform",
  "main": "index.js",
  "scripts": {
    "test": "jest --config=jest.config.js",
    "test:auth": "jest --config=jest.config.js --testPathPattern=auth",
    "test:recommendations": "jest --config=jest.config.js --testPathPattern=recommendations",
    "test:virtual-try-on": "jest --config=jest.config.js --testPathPattern=virtual-try-on",
    "test:analytics": "jest --config=jest.config.js --testPathPattern=analytics",
    "test:e-commerce": "jest --config=jest.config.js --testPathPattern=e-commerce",
    "test:multi-tenant": "jest --config=jest.config.js --testPathPattern=multi-tenant",
    "test:ui": "playwright test",
    "test:ui:auth": "playwright test auth/",
    "test:ui:recommendations": "playwright test recommendations/",
    "test:ui:virtual-try-on": "playwright test virtual-try-on/",
    "test:ui:analytics": "playwright test analytics/",
    "test:ui:e-commerce": "playwright test e-commerce/",
    "test:ui:multi-tenant": "playwright test multi-tenant/",
    "test:api": "jest --config=jest.config.js --testPathPattern=api",
    "test:performance": "k6 run performance/load-test.js",
    "test:stress": "k6 run performance/stress-test.js",
    "test:performance:api": "k6 run -e SCENARIO=api performance/load-test.js",
    "test:performance:auth": "k6 run -e SCENARIO=auth performance/load-test.js",
    "test:performance:recommendations": "k6 run -e SCENARIO=recommendations performance/load-test.js",
    "test:performance:virtual-try-on": "k6 run -e SCENARIO=virtual-try-on performance/load-test.js",
    "test:performance:analytics": "k6 run -e SCENARIO=analytics performance/load-test.js",
    "test:stress:api": "k6 run -e SCENARIO=api-stress performance/stress-test.js",
    "test:stress:auth": "k6 run -e SCENARIO=auth-stress performance/stress-test.js",
    "test:stress:recommendations": "k6 run -e SCENARIO=recommendations-stress performance/stress-test.js",
    "test:stress:virtual-try-on": "k6 run -e SCENARIO=virtual-try-on-stress performance/stress-test.js",
    "test:stress:analytics": "k6 run -e SCENARIO=analytics-stress performance/stress-test.js",
    "test:env:up": "docker-compose -f docker-compose.test.yml up -d",
    "test:env:down": "docker-compose -f docker-compose.test.yml down",
    "test:env:logs": "docker-compose -f docker-compose.test.yml logs -f",
    "test:env:rebuild": "docker-compose -f docker-compose.test.yml build --no-cache",
    "test:ci": "npm run test:env:up && npm run test && npm run test:ui && npm run test:env:down",
    "test:report": "allure generate --clean ./allure-results -o ./allure-report && allure open ./allure-report",
    "test:clean": "rimraf ./allure-results ./allure-report ./test-results ./playwright-report",
    "install:browsers": "playwright install",
    "install:k6": "npm install -g k6"
  },
  "keywords": [
    "integration",
    "testing",
    "varai",
    "playwright",
    "jest",
    "k6"
  ],
  "author": "VARAi Engineering Team",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@playwright/test": "^1.40.0",
    "allure-commandline": "^2.24.0",
    "allure-playwright": "^2.9.2",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "form-data": "^4.0.0",
    "jest": "^29.7.0",
    "jest-allure": "^0.1.3",
    "jest-junit": "^16.0.0",
    "mongodb": "^6.2.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "@types/jest": "^29.5.7",
    "babel-jest": "^29.7.0",
    "eslint": "^8.53.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-playwright": "^0.18.0",
    "jest-environment-node": "^29.7.0",
    "jest-html-reporter": "^3.10.1",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}